<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunny_gradient"
    >

    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/light_translucent_bubble" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/vertical_scroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top_nav"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/current_weather_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight=".5"
                    android:background="@drawable/light_translucent_bubble"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/current_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="June 8"
                            android:textSize="24dp"
                            android:fontFamily="@font/google_sans_bold"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:id="@+id/current_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:34 PM"
                            android:textSize="24dp"
                            android:fontFamily="@font/google_sans_regular"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/current_temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80"
                                android:textSize="72dp"
                                android:fontFamily="@font/google_sans_bold"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                            <TextView
                                android:id="@+id/current_degree_metric"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FÂ°"
                                android:textSize="36dp"
                                android:fontFamily="@font/google_sans_regular"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight=".5"
                    android:background="@drawable/light_translucent_bubble"
                    android:layout_margin="10dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/current_icon"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/clear"
                                />
                            <TextView
                                android:id="@+id/current_conditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunny"
                                android:textSize="36dp"
                                android:fontFamily="@font/google_sans_bold"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/alert_section"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/current_weather_section"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALERT LOCATION"
                    android:fontFamily="@font/google_sans_bold"
                    android:textSize="18dp"/>
