                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/google_sans_regular"
                            android:text="12:34PM"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/light_translucent_bubble"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/hourly_icon_four"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/clear"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/temp_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80"
                                android:textSize="18dp"
                                android:fontFamily="@font/google_sans_bold"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                            <TextView
                                android:id="@+id/metric_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FÂ°"
                                android:textSize="18dp"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/google_sans_regular"
                            android:text="12:34PM"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/light_translucent_bubble"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/hourly_icon_five"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/clear"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/temp_five"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80"
                                android:textSize="18dp"
                                android:fontFamily="@font/google_sans_bold"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                            <TextView
                                android:id="@+id/metric_five"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FÂ°"
