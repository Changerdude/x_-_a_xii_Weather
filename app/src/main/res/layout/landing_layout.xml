                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/temp_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80"
                                android:textSize="18dp"
                                android:fontFamily="@font/google_sans_bold"
                                app:layout_constraintLeft_toLeftOf="parent"/>
                            <TextView
